<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.minionz.qrna.viewModel.MainViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".view.ui.ShopDetailInfoActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@{viewModel.selectedShopInfo.name}"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:text="@{viewModel.selectedShopInfo.address.city}"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_gravity="center"
                    android:text="@{viewModel.selectedShopInfo.address.street}"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageButton
                    is_bookmarked="@{viewModel.selectedShopInfo.bookMark}"
                    shopId="@{viewModel.selectShopId}"
                    android:src="@drawable/ic_favorite_24"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:text="@{viewModel.selectedShopInfo.telNumber}"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="테이블 정보"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            tableInfoList="@{viewModel.tableInfoList}"
            android:background="@drawable/round_corner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="end"
            android:text="@{@string/use_user(viewModel.selectedShopInfo.useUser, viewModel.selectedShopInfo.maxUser)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            setFinish="@{`1`}"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:backgroundTint="#FF5656"
            android:background="@drawable/round_corner"
            android:textColor="#FFFFFF"
            android:text="확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>